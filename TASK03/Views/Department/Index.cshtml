@model IEnumerable<Department>

<table class="table text-center">
    <thead>
    <tfoot>
        <a href="~/Department/Create" class="btn btn-success m-3">Add Department</a>
    </tfoot>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Name</th>
        <th scope="col">Actions</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="col">@item.Id</th>
                <th scope="col">@item.DeptName</th>
                <th scope="col">
                    <a href="~/Department/ViewDetails/@item.Id" class="btn btn-primary mx-2">View</a>
                    <a href="~/Department/Edit/@item.Id" class="btn btn-warning mx-2">Edit</a>
                    <a href="~/Department/Delete/@item.Id" class="btn btn-danger mx-2">Delete</a>
                </th>
            </tr>
        }
        </tbod
